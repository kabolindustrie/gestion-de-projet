generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    firstName String
    lastName  String
    email     String   @unique
    password  String
    role      String   @default("user") // admin ou user
    projects  Project[] // Relation 1-n
}

model Category {
    id       Int       @id @default(autoincrement())
    name     String    @unique
    projects ProjectCategory[] // Relation n-m
}

model Project {
    id          Int                 @id @default(autoincrement())
    title       String
    description String?
    createdAt   DateTime            @default(now())
    updatedAt   DateTime            @updatedAt
    userId      Int
    user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)
    categories  ProjectCategory[]   // Relation n-m
}

model ProjectCategory {
    id          Int       @id @default(autoincrement())
    projectId   Int
    categoryId  Int
    project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
    category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)

    @@unique([projectId, categoryId]) // Empêche la duplication de l'association entre un projet et une catégorie
}
